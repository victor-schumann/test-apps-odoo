<?xml version="1.0" encoding="UTF-8"?>
<templates id="mailing_contact_views" xml:space="preserve">
    <t t-name="MailingContactListView.buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o_mass_mailing_import_contact')]" position="after">
            <button type="button" class="btn btn-secondary o_your_custom_button" t-on-click="action_delete_all_contacts">
                Drop Contacts
            </button>
        </xpath>
    </t>

    <t t-name="MailingContactKanbanView.buttons" t-inherit="web.KanbanView.Buttons" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'o_mass_mailing_import_contact')]" position="after">
            <button type="button" class="btn btn-secondary o_your_custom_button" t-on-click="action_delete_all_contacts">
                Drop Contacts
            </button>
        </xpath>
    </t>
</templates>